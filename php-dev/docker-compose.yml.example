data: 
    extends: 
        file: common.yml
        service: data

nginx:
    extends: 
        file: common.yml
        service: nginx
    links:
        - php-fpm
    volumes_from:
        - data

php-fpm:
    extends: 
        file: common.yml
        service: php-fpm
    links:
        - mysql
        - redis
        - mongo
    volumes_from:
        - data

mysql:
    extends: 
        file: common.yml
        service: mysql
    environment: 
        - MYSQL_ROOT_PASSWORD=111111

redis:
    extends: 
        file: common.yml
        service: redis

mongo:
    extends: 
        file: common.yml
        service: mongo

